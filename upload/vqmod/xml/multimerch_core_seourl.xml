<modification>
	<id>MultiMerch Core SEO URLs</id>
	<author>http://multimerch.com/</author>
	
	<file name="catalog/controller/common/seo_url.php">
		<operation error="log">
			<search position="before"><![CDATA[
				if ($url[0] == 'information_id') {
			]]></search>
